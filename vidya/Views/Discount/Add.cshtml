@using vidya.Web.DTOs.Discounts
@model AddDiscountDTO
<div class="container mt-4">
    <h2 class="mb-3">Create Discount</h2>

    <form asp-action="Add" asp-controller="Discount" method="post" class="needs-validation" novalidate>
        <input asp-for="GameId" type="hidden" />

        <div class="mb-3">
            <label asp-for="Percentage" class="form-label"></label>
            <input asp-for="Percentage" class="form-control" placeholder="Enter discount percentage" />
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" class="form-control" type="date" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" class="form-control" type="date" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Discount" class="btn btn-secondary">Back to List</a>
    </div>
</div>
